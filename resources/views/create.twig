{% extends 'admin.twig' %}
{% block title %} Dashboard {% endblock %}
{% block description %}{% endblock %}

{% block content %}
    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                {{ form_open({'url': 'admin/camps/', 'method': 'post'}) }}
                <div class="form-group">
                {{ form_label('name', 'name') }}
                {{ form_text('name', camp.name, {'class': 'form-control', 'placeholder': 'camp name', 'required': 'true'}) }}
                </div>
                <div class="form-group">
                    {{ form_label('duration', 'duration') }}
                    {{ form_number('duration', camp.duration, {'class': 'form-control', 'placeholder': '8', 'required': 'true'}) }}
                </div>
                <div class="form-group">
                    {{ form_label('price', 'price') }}
                    {{ form_number('price', camp.price, {'class': 'form-control', 'placeholder': '450', 'required': 'true'}) }}
                </div>
                <div class="form-group">
                    {{ form_label('feature_1', 'feature_1') }}
                    {{ form_textarea('feature_1', camp.feature_1, {'class': 'form-control', 'placeholder': 'your first feature', 'required': 'true'}) }}
                </div>
                <div class="form-group">
                    {{ form_label('feature_2', 'feature_2') }}
                    {{ form_textarea('feature_2', camp.feature_2, {'class': 'form-control', 'placeholder': 'your first feature', 'required': 'true'}) }}
                </div>
                {{ form_submit('save', {'class': 'btn btn-default'}) }}
                {{ form_close() }}
                </div>
            </div>

        </div>
    </div>


{% endblock %}