{% extends 'admin/admin.twig' %}
{% block title %} Dashboard {% endblock %}
{% block description %}{% endblock %}

{% block content %}

    <div>
        <div class="container mt-3">
            <div class="row">
                <div class="col-md-4">
                    <h6>Prices</h6>
                    <p>Set up your pricing structure here.</p>
                    {% if session_get('status') %}
                        <div class="alert alert-success" role="alert">
                            {{ session_get('status') }}
                        </div>
                    {% endif %}
                </div>
                <div class="col-md-8">
                    {% for price in prices %}

                        <ul class="list-group pb-3">
                            <li class="list-group-item active">
                                <h5>{{ price.type }}</h5>
                            </li>
                            <li class="list-group-item">price : {{ price.price }}</li>
                            <li class="list-group-item">bulk price : {{ price.bulk }}</li>

                            <li class="list-group-item d-flex justify-content-between
                align-items-center">
                            <a class="btn btn-outline-info" href="{{ route('prices.edit' ,
                                [price.id] ) }}">Edit</a>

                            {{ form_open({ route: ['prices.destroy', price.id], 'method':
                                'DELETE'}) }}
                            {{ form_submit('delete', {'class': 'btn btn-outline-danger'}) }}
                            {{ form_close() }}

                            </li>
                        </ul>

                    {% endfor %}
                </div>
            </div>


        </div>
    </div>


{% endblock %}